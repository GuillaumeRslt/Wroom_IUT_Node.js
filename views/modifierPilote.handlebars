  <div class="row">
    <label class="auto" for="Nom">Nom</label>
    <input class="auto" type="text" name="nom" id="Nom" />
  </div>
  <div class="row">
    <label class="auto" for="Prenom">Prenom</label>
    <input class="auto" type="text" name="prenom" id="Prenom" />
  </div>
  <div class="row">
    <label class="auto" for="Date">Date de naissance</label>
    <input class="auto" type="number" name="jour" id="jour" min="1" max="31"/> /
    <input class="auto" type="number" name="mois" id="mois" min="1" max="12"/> /
    <input class="auto" type="number" name="annee" id="annee" min="1920" max="2050"/>
  </div>
  <div class="row">
    <label class="auto" for="Natio">Nationalit√©</label>
