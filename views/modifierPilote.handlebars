    </select>
  </div>
  <div class="row">
    <label class="auto" for="Ecurie">Ecurie</label>
    <select class="auto" name="ecurie">

    </select>
  </div>
  <div class="row">
    <label class="auto" for="Point">Points</label>
    <input class="auto" type="text" name="point" id="Points" /> pts
  </div>
  <div class="row">
    <label class="auto" for="Prenom">Poids</label>
    <input class="auto" type="text" name="poids" id="Poids" /> kg
  </div>
  <div class="row">
    <label class="auto" for="Prenom">Taille</label>
    <input class="auto" type="text" name="taille" id="Taille" /> cm
  </div>
  <div class="row">
    <label class="auto" for="Desc">Description</label>
