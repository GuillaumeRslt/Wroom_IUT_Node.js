<div class="carrepilote">
  {{#each listePilote}}
  <div class="listePilote">
    <a href="/descPilote/{{this.pilnum}}"><h1>{{nom}} {{prenom}}</h1>
    {{#if this.img }}<img class="imgpilote" src="/image/pilote/{{img}}" alt="image du pilote">{{/if}}</a>
  </div>
  {{/each}}
</div>

<br>
<br>

<div class="detPilote">

{{#each descPilote}}
<div class="en">
  <div class="imagetete">
      {{#if this.img}}<img class="imgggg" src="/image/pilote/{{img}}" alt="image du pilote">{{/if}}
  </div>
  <div class="infopil1">
    <h1>Nom : </h1><p>{{nom}} {{prenom}}</p>
    <h1>Date de naissance :</h1><p>{{formatDate this.date 'DD MMMM YYYY' }}</p>
  </div>
  <div class="infopil2">
    <h1>Nationalité :</h1><p>{{nation}}</p>
    <h1>Poids :</h1><p>{{poids}}</p>
  </div>
  <div class="infopil3">
    <h1>Taille :</h1><p>{{taille}}</p>

      {{#ifCond this.ecunom '==' NULL}}
      <h1>Ecurie :</h1><p>Pas d'écurie cette année</p>
       {{else}}
       <h1>Ecurie :</h1><p>{{ecurie}}</p>
      {{/ifCond}}

  </div>
</div>
{{/each}}

<br>

{{#if sponsors}}
<h1>Principaux sponsors :</h1>
{{#each sponsors}}
  <p>{{nomspon}} ({{type}})</p>
{{/each}}
{{/if}}

<br>

