<h1><img class="logo" src="/image/cat_ecurie.png"><br>Gestion des Ecuries </h1>
<a class="ajouter" href="/ajouterEcurie/"><p><img src="/image/act_add.png"> Ajouter une ecurie</p></a>

<table>
      <tr>
        <th>Nom</th>
        <th>Directeur</th>
        <th>Points</th>
        <th>Actions</th>
      </tr>
      {{#each listeEcurie}}
        <tr>
            <td>{{this.nom}}</td>
            <td>{{this.dir}}</td>
            <td>{{this.point}} </td>
            <td> <div class="modsup">
              <div class="mod">
              <a href="/modifierEcurie/{{this.num}}"><img src="/image/act_edit.png"><p>Modifier</p></a>
              </div>
              <div class="sup">
               <a href="/supprimerEcurie/{{this.num}}"><img src="/image/act_delete.png"><p>Supprimer</p></a>
             </div>
             </td>
             </div>
        </tr>
      {{/each}}
</table>

{{#if est_supprime}}
<script src="/JS/estSupprimeEcurie.js" charset="utf-8"></script>
{{/if}}

{{#if est_ajoute}}
<script src="/JS/estAjouteEcurie.js" charset="utf-8"></script>
{{/if}}

{{#if est_modifie}}
<script src="/JS/estModifieEcurie.js" charset="utf-8"></script>
{{/if}}
