<h1><img class="logo" src="/image/cat_ecurie.png"><br>Gestion des Ecuries </h1>
<a class="ajouter" href="/ajouterEcurie/"><p><img src="/image/act_add.png"> Ajouter une ecurie</p></a>

<table>
      <tr>
        <th>Nom</th>
        <th>Directeur</th>
        <th>Points</th>
        <th>Actions</th>
      </tr>
      {{#each listeEcurie}}
        <tr>
            <td>{{nom}}</td>
            <td>{{dir}}</td>
            <td>{{point}} </td>
            <td> <div class="modsup">
              <div class="mod">
              <a href="/modifierEcurie/{{num}}"><img src="/image/act_edit.png"><p>Modifier</p></a>
              </div>
              <div class="sup">
               <a href="/supprimerEcurie/{{num}}"><img src="/image/act_delete.png"><p>Supprimer</p></a>
             </div>
             </td>
             </div>
        </tr>
      {{/each}}
</table>

{{#if est_supprime}}
<script type="text/javascript">
  $(document).ready(function() {
    alert("L'écurie a bien été supprimée");
    document.location.href="/listerEcurie";
  });
</script>
{{/if}}

{{#if est_ajoute}}
<script type="text/javascript">
  $(document).ready(function() {
    alert("L'écurie a bien été ajoutée !");
    document.location.href="/listerEcurie";
  });
</script>
{{/if}}

{{#if est_modifie}}
<script type="text/javascript">
  $(document).ready(function() {
    alert("L'écurie a bien été modifiée");
    document.location.href="/listerEcurie";
  });
</script>
{{/if}}
