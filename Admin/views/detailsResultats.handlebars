<h1>Saisie des resultats</h1>

<div class="tabPPP">

<div id="resultats">


<table>
  <tr>
    <th>_</th>
    <th>Place</th>
    <th>Pilote</th>
    <th>Temps</th>
    <th>NbPoints</th>
  </tr>
  {{#each piloteEtTemps}}
  <tr>
    <td><a href="/supprimerResultat/{{this.gpnum}}/{{this.pilnum}}"><img src="/image/act_delete.png"></a></td>
    <td>{{this.place}}</td>
    <td>{{this.pilnom}}</td>
    <td>{{this.tempscourse}}</td>
    <td>{{this.ptnbpointsplace}}</td>
  </tr>
  {{/each}}
</table>
</div>

<table id="tabAjoutTps">
  <tr>
    <form action="/ajoutTemps" method="post">
      <input type="hidden" name="gpnum" value="{{gpnum}}">
    <td>Nouveau temps :</td>
    <td><select class="auto" name="pilnum" required>
      {{#each pilotes}}
      <option value="{{this.pilnum}}">{{this.pilnom}}</option>
      {{/each}}
    </select></td>
    <td id="ajoutTemps"><input name="heure" type="number" min="0" required></input>:
      <input name="minute" type="number" min="0" max="59" required></input>:
      <input name="seconde" type="number" min="0" max="59" required></input></td>
    <td><button type="submit">OK</button></td>
    </form>
  </tr>
</table>
</div>
