<h1> Modifier un circuit </h1>

<form action="/circuitModifie" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="cirnum" value="{{circuit.cirnum}}"/>

  <div class="row">
    <label class="auto" for="Nom">Nom</label>
    <input class="auto" type="text" name="cirnom" id="Nom"  value="{{circuit.cirnom}}" required />
  </div>
  <div class="row">
    <label class="auto" for="Longueur">Longueur</label>
    <input class="auto" type="text" name="CIRLONGUEUR" id="Long" value="{{circuit.CIRLONGUEUR}}" required /> m
  </div>
  <div class="row">
    <label class="auto" for="pays">Pays</label>
    <select class="auto" name="paynum" required>
      <option value="{{circuit.paynum}}">{{circuit.paynom}}</option>
      {{#each pays}}
      <option value="{{this.paynum}}">{{this.paynom}}</option>
      {{/each}}
    </select>
  </div>
  <div class="row">
    <label class="auto" for="Image">Images</label>
    <img id="imageCircuit"
    src="/image/circuit/{{circuit.ciradresseimage}}"
    title="modifier l'image ..." alt="image circuit"
    onclick="inputFile()"
    style="height: 60px;">
    <input type="file" id="inputImg" name="image" onchange="changeImage()" hidden>
  </div>
  <div class="row">
    <label class="auto" for="Personne">Nombre de spectateurs</label>
    <input class="auto" type="number" name="CIRNBSPECTATEURS" id="Personne"  value="{{circuit.CIRNBSPECTATEURS}}" required/> personnes
  </div>
  <div class="row">
    <label class="auto" for="Desc">Description</label>
    <textarea name="cirtext" rows="5" cols="60" required>{{circuit.cirtext}}</textarea>
  </div>

  <button type="submit">MODIFIER</button>
</form>

<script type="text/javascript">
  function inputFile() {
    $('#inputImg').click();
  }
  function agrandire() {
    $('#imageCircuit').hover(function() {
      $('#imageCircuit').animate({'height': '70px'}, 'medium');
    },
    function () {
      $('#imageCircuit').animate({'height': '60px'}, 'medium');
    });
  }
  function changeImage() {
    var image = document.getElementById('imageCircuit');
	   image.src = URL.createObjectURL(event.target.files[0]);
  }
  $(document).ready(function() {
    agrandire();
  });
</script>
